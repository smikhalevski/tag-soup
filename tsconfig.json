{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "preserveSymlinks": true,
    "removeComments": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es3",
    "module": "esnext",
    "rootDir": "./src/main",
    "outDir": "./lib"
  },
  "include": [
    "./src/main/**/*"
  ]
}
