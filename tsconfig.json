{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "rootDir": "./src/main",
    "outDir": "./lib"
  },
  "include": [
    "./src/main/**/*"
  ]
}
